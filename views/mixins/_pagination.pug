mixin pagination(page, pages, count)
  .pagination
    .pagination__prev
      if page > 1
        a(href=`/items/page/${page - 1}`) Назад
    .pagination__text
      p Страница #{page} из #{pages}
    .pagination__next
      if page < pages
        a(href=`/items/page/${parseFloat(page) + 1}`) Вперед
